
{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    //    "jsx": "preserve",
    "outDir": "./public/",
    "noImplicitAny": true,
    //    "module": "es6",
    "jsx": "preserve",
    "downlevelIteration": true,
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "ClientApp/*": ["./ClientApp/*"],
      "features/*": ["./features/*"],
      "store/*": ["./store/*"],
      "utils/*": ["./utils/*"],
      "components/*": ["./components/*"],
      "service/*": ["./service/*"],
      "styles/*": ["./styles/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
